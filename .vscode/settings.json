{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "quickfix.biome": "always",
    "source.organizeImports.biome": "always",
    "source.addMissingImports.ts": "always"
  },
  "cSpell.words": [
    "ativoscapital",
    "fastify",
    "Fastify",
    "jedi"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}